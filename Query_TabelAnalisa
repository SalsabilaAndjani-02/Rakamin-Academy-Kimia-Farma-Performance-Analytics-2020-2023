CREATE OR REPLACE TABLE `rakamin-academy-datascience.kimia_farma.kf_tabel_analisa` AS
WITH persentase_gross_laba AS (
  SELECT *,
    CASE
      WHEN price <= 50000 THEN 0.1
      WHEN price > 50000 AND price <= 100000 THEN 0.15
      WHEN price > 100000 AND price <= 300000 THEN 0.2
      WHEN price > 300000 AND price <= 500000 THEN 0.25
      ELSE 0.3
    END AS persentase_gross_laba
  FROM `rakamin-academy-datascience.kimia_farma.kf_product`
)

SELECT
  t.transaction_id,
  t.date,
  kc.branch_id,
  kc.branch_name,
  kc.kota,
  kc.provinsi,
  kc.rating AS rating_cabang,
  t.customer_name,
  p.product_id,
  p.product_name,
  p.price AS actual_price,
  t.discount_percentage,
  t.price - (t.price * t.discount_percentage) AS nett_sales,
  ((t.price - (t.price * t.discount_percentage))*
  CASE
    WHEN t.price <= 50000 THEN 0.1
    WHEN t.price > 50000 AND t.price <= 100000 THEN 0.15
    WHEN t.price > 100000 AND t.price <= 300000 THEN 0.2
    WHEN t.price > 300000 AND t.price <= 500000 THEN 0.25
    ELSE 0.3
    END) AS nett_profit,
  t.rating AS rating_transaksi
FROM `rakamin-academy-datascience.kimia_farma.kf_final_transaction` t
JOIN `rakamin-academy-datascience.kimia_farma.kf_kantor_cabang` kc
    ON t.branch_id = kc.branch_id
JOIN `rakamin-academy-datascience.kimia_farma.kf_product` p
    ON t.product_id = p.product_id;
SELECT * FROM `rakamin-academy-datascience.kimia_farma.kf_tabel_analisa`
